  <update id="updateByPrimaryKey" parameterType="com.webmagic.model.Notice" >
    update notice
    set `title` = #{title,jdbcType=VARCHAR},
      `content` = #{content,jdbcType=VARCHAR},
      `create_time` = #{createTime,jdbcType=TIMESTAMP},
      `type` = #{type,jdbcType=VARCHAR}
